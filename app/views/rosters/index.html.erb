<h1>Listing Rosters</h1>

<table>
  <thead>
    <tr>
      <th>Roster Date</th>
      <th>Company Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rosters.each do |roster| %>
      <tr>
        <td><%= roster.roster_date %></td>
        <td><%= roster.company.name %></td>
        <td><%= task.project.title%></td>
        <td><%= link_to 'Show', roster_path(roster) %></td>
        <td><%= link_to 'Edit', edit_roster_path(roster) %></td>
        <td><%= link_to 'Delete', roster_path(roster), data: {turbo_method: :delete, turbo_confirm: 'Are you sure want to delete?'} %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
